@model SocialMedia.Models.UserModel

@{
    ViewData["Title"] = "View Profile";
}

<h2>@Model.Name's Profile</h2>
<img src="@Model.ProfilePictureUrl" alt="Profile Picture" width="150" height="150" />
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Bio:</strong> @Model.Bio</p>

<a href="/Profile/EditProfile">Edit Profile</a>
